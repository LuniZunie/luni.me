{
    "server": {
        "domain": "luni.me",
        "host": "0.0.0.0",
        "port": 3000,

        "rel": {
            "secure": false
        },
        "dev": {
            "secure": false
        }
    },
    "express": {
        "data_limit": "10mb"
    },
    "auth": {
        "expires_in": "24h",
        "in": {
            "success": "/",
            "failure": "/login",
            "google": {
                "route": "/auth/google",
                "callback": "/auth/google/callback",
                "scope": [ "profile", "email" ]
            },
            "github": {
                "route": "/auth/github",
                "callback": "/auth/github/callback",
                "scope": [ "user:email" ]
            }
        },
        "out": {
            "route": "/logout",
            "success": "/",
            "failure": "/login"
        },
        "delete": {
            "route": "/delete",
            "success": "/",
            "failure": "/login"
        }
    },
    "router": [
        {
            "subdomains": [ "seqr" ],
            "route": [ "/" ],
            "file": "seqr/index.ejs"
        },

        {
            "route": [ "/" ],
            "file": "home.ejs"
        },
        {
            "route": [ "/login" ],
            "file": "login.ejs"
        },
        {
            "route": [ "/profile" ],
            "file": "profile.ejs"
        },
        {
            "route": [ "/seqr" ],
            "file": "seqr/index2.ejs"
        },
        {
            "route": [ "/seqr-presentation" ],
            "file": "seqr/presentation.ejs"
        },
        {
            "route": [ "/404" ],
            "redirect": "/"
        }
    ]
}