{
    "server": {
        "domain": "luni.me",
        "host": "0.0.0.0",
        "port": 3000,

        "rel": {
            "secure": false
        },
        "dev": {
            "secure": false
        }
    },
    "express": {
        "data_limit": "10mb"
    },
    "auth": {
        "expires_in": "24h",
        "in": {
            "success": "/",
            "failure": "/login",
            "google": {
                "route": "/auth/google",
                "callback": "/auth/google/callback",
                "scope": [ "profile", "email" ]
            },
            "github": {
                "route": "/auth/github",
                "callback": "/auth/github/callback",
                "scope": [ "user:email" ]
            }
        },
        "out": {
            "route": "/logout",
            "success": "/",
            "failure": "/login"
        },
        "delete": {
            "route": "/delete",
            "success": "/",
            "failure": "/login"
        }
    },

    "router": {
        "dev": false,

        "domains": [
            {
                "name": "seqr",
                "dev": false,

                "routes": [
                    {
                        "route": "/",
                        "type": "file",
                        "data": {
                            "path": "../client/view/seqr/index2.ejs"
                        }
                    }
                ]
            },
            {
                "name": "dev",
                "dev": true,

                "domains": [
                    {
                        "name": "seqr",

                        "routes": [
                            {
                                "route": "/",
                                "type": "file",
                                "data": {
                                    "path": "../client/seqr/frontend/view/index.ejs"
                                }
                            }
                        ]
                    }
                ]
            }
        ],
        "routes": [
            {
                "route": "/",
                "type": "file",
                "data": {
                    "path": "../client/view/home.ejs"
                }
            },
            {
                "route": "/profile",
                "type": "file",
                "data": {
                    "path": "../client/view/profile.ejs"
                }
            }
        ]
    }
}