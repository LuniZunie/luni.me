        <noscript>Your browser does not support JavaScript!</noscript>
        <script>
            const lightMode = localStorage.getItem("light-mode") === "true";
            document.documentElement.classList.toggle("light", lightMode);

            window.onerror = function (message, source, lineno, colno, error) {
                const err = `Error: ${message} at ${source}:${lineno}:${colno}`;

                const socket = new WebSocket(`${window.location.protocol.replace("http", "ws")}//${window.location.host}`);
                socket.onopen = function() {
                    socket.send(JSON.stringify({
                        for: "server-logger",
                        type: "SeqR:error",
                        message: err,
                        stack: (error?.stack || "No stack trace available").split("\n").map(line => line.trim())
                    }));
                    socket.close();
                };

                return false; // Prevent default error handling
            };
        </script>
